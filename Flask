from flask import Flask, request, jsonify
import pickle
import numpy as np
import requests
import json

# Initialize the Flask application
app = Flask(__name__)

# Load the model
model = pickle.load(open('model.pkl', 'rb'))

@app.route("/")
def home():
    return "Welcome to the Flask API. Use the /predict endpoint to get predictions."

@app.route("/predict", methods=["POST"])
def predict():
    # Get the data from the POST request
    data = request.get_json(force=True)
    
    # Convert data into a numpy array and reshape if necessary
    input_data = np.array(data['features']).reshape(1, -1)  # Ensuring the data is in the correct shape
    
    # Make predictions
    prediction = model.predict(input_data)
    
    # Return the predictions as JSON
    return jsonify({'prediction': prediction.tolist()})

if __name__ == '__main__':
    app.run(debug=True)
    
# Example usage: Sending a POST request to the /predict endpoint
if __name__ != '__main__':
    # Example data to send for prediction
    data = {'features': [1, 2, 3, 4]}  
    
    # URL of your Flask app
    url = 'http://127.0.0.1:5000/predict'
    
    # Send POST request with data
    response = requests.post(url, json=data)
    
    # Get the response
    print(response.json())
